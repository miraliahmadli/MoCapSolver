{
    "joint_to_marker": "dataset/joint_to_marker.txt",
    "csv_file": "dataset/meta_data.csv",

    "train_filenames": "data/train.txt",
    "var_filenames": "data/train.txt",
    "test_filenames": "data/train.txt",

    "model_dir": "logs/2/model.pth",
    "train_sum": "logs/2/tensorboard/train",
    "val_sum": "logs/2/tensorboard/val",

    "use_gpu":true,
    "epochs": 200,
    "batch_size": 128,
    "num_markers": 41,
    "num_joints": 31,
    "user_weights": 1.0,

    "model":{
        "available": ["baseline", "least_square", "modified_baseline", "gnn"],
        "used": "baseline",
        "baseline": {
            "hidden_size":2048,
            "num_layers": 5,
            "use_svd": true
        }
    },

    "optimizer":{
        "available": ["SGD", "Adam", "AmsGrad"],
        "used": "AmsGrad",
        "SGD": {
            "lr": 0.001
        },
        "Adam": {
            "lr": 0.001
        },
        "AmsGrad": {
            "lr": 0.005,
            "weight_decay": 0.01
        },
        "Step_LR": [35, 50, 60, 100, 150]
    }
}
