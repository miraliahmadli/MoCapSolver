{
    "joint_to_marker": "dataset/joint_to_marker.txt",
    "csv_file": "dataset/meta_data.csv",

    "train_filenames": "data/train.txt",
    "var_filenames": "data/train.txt",
    "test_dir": "data/train.txt",

    "model_dir": "logs/1/model.pth",
    "train_sum": "logs/1/tensorboard/train",
    "val_sum": "logs/1/tensorboard/val",

    "use_gpu":true,
    "epochs": 100,
    "batch_size": 128,
    "num_markers": 41,
    "num_joints": 31,
    "user_weights": 1.0,

    "model":{
        "available": ["baseline", "least_square", "modified_baseline", "gnn"],
        "used": "baseline",
        "baseline": {
            "hidden_size":2048,
            "num_layers": 5,
            "use_svd": false
        }
    },

    "loss": {
        "gamma": 0.01
    },

    "optimizer":{
        "available": ["SGD", "Adam", "AmsGrad"],
        "used": "AmsGrad",
        "SGD": {
            "lr": 0.001
        },
        "Adam": {
            "lr": 0.001
        },
        "AmsGrad": {
            "lr": 0.01,
            "weight_decay": 0.01
        }
    }
}
